<h1>タスク一覧</h1>
<%= link_to "終了期日でソート", root_path(sort: "true") %>
<br>
<br>
<% @tasks.each do |task| %>
  <%= task.title %><br>
  <div class="task_content">
    <%= task.content %><br>
  </div>
  <%= task.deadline.strftime('%Y/%m/%d %H:%M') %><br>
  <%= task.status %><br>
  <%= link_to "詳細", task %><br>
  <%= link_to "編集", edit_task_path(task) %><br>
  <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除してもよろしいですか？" } %><br>
  <hr>
<% end %>
