<div class="text-center" >
<br>
<br>
<br>
<br>
  <div class=" alert alert-secondary offset-3 col-6">
    <br>
    <h1 class="h3 mb-3 font-weight-normal" >Sign up</h1>

    <%= form_with(model: @user, local: true, class: "form-signin") do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control offset-3 col-6" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control offset-3 col-6" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control offset-3 col-6" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control offset-3 col-6" %>
      </div>
        <%= f.submit "Create my account" , class: "btn btn-primary"%>
    <% end %>
    <br>
  </div>
</div>
